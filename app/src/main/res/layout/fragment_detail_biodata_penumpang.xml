<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.DetailBiodataPenumpangFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_toolbar"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_height="40dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:paddingVertical="10dp"
            android:background="@color/Orange"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:src="@drawable/back"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/tv_toolbar"
                android:textColor="@color/white"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Penumpang Dewasa 1" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/layout_toolbar">

            <TextView
                style="@style/TextBody10Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/DARKBLUE05"
                app:layout_constraintTop_toBottomOf="@+id/layout_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/form_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle"
                    android:inputType="none"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextBody10Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nama Lengkap"
                android:textColor="@color/DARKBLUE05"
                android:textSize="16dp" />

            <EditText
                android:paddingLeft="15dp"
                android:id="@+id/txt_nama_lengkap"
                android:hint="Harry"
                android:textColorHint="@color/NEUTRAL02"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rectangle"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    style="@style/TextBody10Regular"
                    android:id="@+id/tvPulangPergi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Punya nama keluarga"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/btn_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/DARKBLUE05" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_namaKeluargaPemesan"
                android:layout_height="wrap_content"
                android:text="Nama Keluarga"
                android:visibility="gone"
                android:textColor="@color/DARKBLUE05"
                android:textSize="16dp" />

            <EditText
                android:paddingLeft="15dp"
                android:id="@+id/tv_NamaKeluargaPemesan"
                android:hint="Potter"
                android:visibility="gone"
                android:textColorHint="@color/NEUTRAL02"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rectangle"/>

            <TextView
                style="@style/TextBody10Regular"
                android:layout_width="wrap_content"
                android:id="@+id/tv_tanggal_lahir"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:layout_marginTop="10dp"
                android:textColor="@color/DARKBLUE05"
                android:textSize="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputdateReturn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minHeight="48dp"
                app:hintEnabled="false"
                app:hintAnimationEnabled="false"
                app:boxBackgroundMode="outline"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_date_of_birth"
                    android:layout_width="match_parent"
                    android:hint="Masukan Tanggal"
                    android:padding="2dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:drawableEnd="@drawable/date"
                    android:background="@drawable/rectangle"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/NEUTRAL02"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextBody10Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Kewarganearaan"
                android:textColor="@color/DARKBLUE05"
                android:textSize="16dp" />

            <EditText
                android:paddingLeft="15dp"
                android:id="@+id/txt_kewarganegaraan"
                android:hint="Masukkan Kewarganegaraan"
                android:textColorHint="@color/NEUTRAL02"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rectangle"/>

            <TextView
                style="@style/TextBody10Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="KTP/Paspor"
                android:textColor="@color/DARKBLUE05"
                android:textSize="16dp" />

            <EditText
                android:paddingLeft="15dp"
                android:id="@+id/txt_ktp"
                android:hint="Masukkan Nomor KTP/Paspor"
                android:textColorHint="@color/NEUTRAL02"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rectangle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:background="#FFFFFF">
                <Button
                    android:id="@+id/btn_simpan"
                    style="@style/Btn"
                    android:fontFamily="@font/poppinsmedium"
                    android:backgroundTint="@color/Orange"
                    android:text="Simpan"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>